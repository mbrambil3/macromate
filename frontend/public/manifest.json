{
  "manifest_version": 3,
  "name": "MacroMate Recorder",
  "description": "Macro recorder automatizado para Chrome",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open MacroMate"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  }
}